@model FactModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form>
        <button asp-action="GetFact">Get Fact</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="text-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (Model != null)
    {
        <div>
            <p>@Model.ToString()</p>
        </div>
    }
</div>
